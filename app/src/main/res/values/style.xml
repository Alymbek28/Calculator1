<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Buttom.Bass" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Buttom.gray" parent="Buttom.Bass">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Buttom.Orange" parent="Buttom.Bass">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Buttom.dark_gray" parent="Buttom.Bass">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
       </resources>